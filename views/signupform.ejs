<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup Form</title>
</head>
<body>
    <div>
        <h1>Sign Up</h1>
        <form id="signupForm" action="/signup" method="POST">
            <input type="text" id="signupName" name="signupName" placeholder="Name" required>
            <input type="email" id="signupEmail" name="signupEmail" placeholder="Email" required>
            <input type="password" id="signupPassword" name="signupPassword" placeholder="Password" required>
            <button type="submit">Sign Up</button>
        </form>
    </div>

    <script>
        document.getElementById('signupForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const name = document.getElementById('signupName').value;
            const email = document.getElementById('signupEmail').value;
            const password = document.getElementById('signupPassword').value;
            console.log('Signup:', name, email, password);

            fetch('/signup', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ name, email, password })
            })
            .then(response => response.json())
            .then(data => {
                console.log('Signup Success:', data);
            })
            .catch(error => {
                console.error('Signup Error:', error);
            });
        });
    </script>
</body>
</html>
